extends layout

block content
  h1 #{title}
  form(method='POST', action='/articles/edit/'+article._id )
    #form-group
      label Title:
      input.form-control(name='title', type='text', value=article.title)
    #form-group
      label Author:
      input.form-control(name='author', type='text', value=article.author, readonly = 'readonly')
    #form-group
      label Address:
      textarea.form-control(name='body')= article.body
    br

    #form-group
        label Region:
        select.form-control(name='regions')
            option(value='North') North
            option(value='Center') Center
            option(value='South') South
            option(value='Azores') Azores
            option(value='Madeira') Madeira


    #form-group
      label MaxCapacity:
      input.form-control(type='number' name='maxCapacity' min='1' max='16', value=article.maxCapacity)
    
    #form-group
        label Features:
        br
        input(type='checkbox' name='features' value='Elevator')
        | Elevator
        br
        input(type='checkbox' name='features' value='Balcony')
        | Balcony
        br
        input(type='checkbox' name='features' value='Terrace')
        | Terrace
        br
        input(type='checkbox' name='features' value='HandicapAcessible')
        | Handicap Friendly

    #form-group
        fieldset
            p
                #premiumFeaturesGroup
                    label Premium Features:
                    br
                    input(type='checkbox' name='premiumFeature1' value='WiFi')
                    | Wifi - 05.00€
                    br
                    input(type='checkbox' name='premiumFeature2' value='AC')
                    | Air Conditioning - 42.00€
                    br
                    input(type='checkbox' name='premiumFeature3' value='Fire Wood')
                    | Fire Wood - 33.00€
                    br
                    input(type='checkbox' name='premiumFeature4' value='Telephone')
                    | Telephone - 11.00€
                    br
                    input(type='checkbox' name='premiumFeature5' value= 'TV Cable Premium')
                    | Cable TV Premium Serice - 27.00€
                    br
                    input(type='checkbox' name='premiumFeature6' value='Pool')
                    | Pool - 120.00€

    #form-group
        input.form-control(type='hidden' name='features' , value=article.features)


    br
    input.btn.btn-primary(type='submit',value='Submit')

    
