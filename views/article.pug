extends layout

block content
  h1 Accomodation: #{article.title}
  br
  h4 Region: #{article.regions}
  h5 Address: #{article.body}
  h5 Max Capacity: #{article.maxCapacity}
  br
  h4 Features:
  p= article.feature1
  p= article.feature2
  p= article.feature3
  p= article.feature4
  br
  h4 Premium Features:
  p= article.premiumFeature1
  p= article.premiumFeature2
  p= article.premiumFeature3
  p= article.premiumFeature4
  p= article.premiumFeature5
  p= article.premiumFeature6

  br
  br
  h6 Owned by #{author}

  
  hr
  if user
    if user.id ==article.author
      a.btn.btn-default(href='/articles/edit/'+article._id) Edit 
      a.btn.btn-danger.delete-article(href='#',data-id=article._id) Delete
  
