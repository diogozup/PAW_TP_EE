extends layout

block content
    h1 #{title}
    form(method='POST', action='/bookings/update/status/'+booking._id)
    
        #form-group
        label Title:
        input.form-control(name='title', type='text', value=booking.title)

        #form-group
            label Booking:
            br
            input(type='date' name='checkIn', value=booking.checkIn)
            | CheckIn
            br
            input(type='date' name='checkOut', value=booking.checkOut)
            | CheckOut

        #form-group
            label Features:
            br
            input(type='checkbox' name='feature1' value='Elevator' checked)
            | Elevator
            br
            input(type='checkbox' name='feature2' value='Balcony'  )
            | Balcony
            br
            input(type='checkbox' name='feature3' value='Terrace')
            | Terrace
            br
            input(type='checkbox' name='feature4' value='HandicapAcessible')
            | HandicapAcessible
        
        #form-group
            label Premium Features:
            br
            input(type='checkbox' name='premiumFeature1' value='Wifi' checked)
            | Wifi
            br
            input(type='checkbox' name='premiumFeature2' value='AC')
            | Air Conditioning
            br
            input(type='checkbox' name='premiumFeature3' value='FireWood')
            | Fire Wood
            br
            input(type='checkbox' name='premiumFeature4' value='Telephone')
            | Telephone
            br
            input(type='checkbox' name='premiumFeature5' value='TVCable')
            | Cable TV Premium Serice
            br
            input(type='checkbox' name='premiumFeature6' value='Pool')
            | Pool

            #form-group
            input.form-control(type='hidden' name='status' , value='1') 
    



            #form-group
            label Booking Request:
                br
                input(type='radio' name='status' value='0')
                |  Decline
                br
                input(type='radio' name='status' value='2')
                |  Accept
                br
                br

            input.btn.btn-primary(type='submit',value='Submit')

