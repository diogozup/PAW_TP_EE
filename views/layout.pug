doctype html
html
  head
    title Booking PandaPanda
    link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
    link(rel='stylesheet' href='/css/style.css')
    
    





    nav.navbar.navbar-inverse
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') Accomodations
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li
              a(href='/') Home
            li
            if user                
                //- li
                //-     a(href='/') Accomodations
                li
                    a(href='#') _______________________________________________________________________________________________________________________________
                li
                    a(href='/articles/add') Add Accomodation
                li
                    a(href='/articles/show/myAccomodations') My Accomodations                                                              
                li
                    a(href='/bookings/show/myAccomodations/BookingRequests') Offers(All)
                li
                    a(href='/bookings/show/myAccomodations/BookingRequestsAccepted') Offers(Accepted)
                li
                    a(href='/bookings/show/myAccomodations/BookingRequestsPending') Offers(Pending)
                li
                    a(href='#') _________________________________________________________________________________________________________________________________________________        
                li
                    a(href='/bookings/show/allBookings') Bookings

                li
                    a(href='/bookings/myBookings') My Bookings



          ul.nav.navbar-nav.navbar-right
            if user
              li 
                a(href='/users/logout') Logout
            else
              li
                a(href='/users/register') Register
              li
                a(href='/users/login') Login
    .container
      != messages('message', locals)
      if errors
        each error, i in errors
          div(class="alert alert-danger") #{error.msg}
      block content
      br
      hr
      footer
        p ESTG - Booking PandaPanda &copy; 2019
    script(src='/bower_components/jquery/dist/jquery.js')  
    script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
    script(src='/js/main.js')  
