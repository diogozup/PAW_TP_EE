extends layout


block content
    //- h1 All My Accomodation Bookings Requests (all)
    h1 My Pending Booking Offers
    //#{title}
    ul.list-group
        each article, i in articles
            if user.id == article.author
                each booking, i in bookings
                    if booking.authorArticle == article.id
                        if booking.status == "1"
                            li.list-group-item
                                a(href="/bookings/show/makeDecision/"+booking._id)= booking.title                      

